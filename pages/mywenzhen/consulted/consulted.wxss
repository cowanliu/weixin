.section {
  width: 95%;
  margin: 15rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  padding: 15rpx 0;
  border: 1rpx solid #ccc;
}
.section text {
  padding-left: 30rpx;
}
.picker {
  letter-spacing: 30rpx;
  border: 1rpx solid silver;
  padding-left: 30rpx;
  margin: 0 15rpx;
  display: flex;
  align-items: center;
}
